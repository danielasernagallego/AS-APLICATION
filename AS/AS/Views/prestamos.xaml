<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AS.prestamos">
    <ContentPage.Content>

        <Grid>

            <Image Source="Landscape.jpg" Aspect="AspectFill" />

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackLayout Padding="10,20,10,5"
                    Orientation="Vertical">
                    <StackLayout Orientation="Horizontal">
                        
                        <Button x:Name="agregarprestamobtn" Text="Nuevo prestamo" BackgroundColor="White" BorderRadius="25" TextColor="#000000" HorizontalOptions="EndAndExpand" FontAttributes="Bold" />
                    </StackLayout>

                </StackLayout>

            </Grid>

        </Grid>

    </ContentPage.Content>
</ContentPage>